extends layout-loggedin

block content
    // Team Section
    section#testimonies.bg-light-gray      
      .container.text-center
        .row
          .col-sm-4
            .container              
              h1.info VARIEDADES DE CANNABIS
              p.info Nota: Los análisis mostrados se realizaron con el equipo "Mydx", el cual entrega resultados cualitativos y semicuantitativos,                
            .container                
              .col-lg-4.col-lg-offset-4
                - if(role=='admin')
                  a.portfolio-link(href='flor0', data-toggle='modal').button.btn.btn-primary(type='submit') Crear nueva flor 
              br
              br
              table#catalogo.display.text-center(width='100%', cellspacing='0')
                thead
                  tr
                    th ID
                    th NOMBRE
                    th CLASIFICACIÓN                    
                    th DISPONIBILIDAD
                    th FICHA
                
                tbody              
                  - for (var y = 0; y < Object.keys(menu).length; y++)                                          
                    tr
                    - for (var x = 0; x < 1; x++)
                      td= id[y] 
                      - var callId = id[y] 
                    - for (var x = 0; x < 1; x++)
                      td= nombres[y]
                    - for (var x = 0; x < 1; x++)
                      td= clasificacion[y]
                    - for (var x = 0; x < 1; x++)
                      td= stock[y]
                        - if(role == 'admin')
                          br                    
                          a.hidden.portfolio-link(href='editStock', data-toggle='modal').button.btn.btn-primary(type='submit') Modificar
                    - for (var x = 0; x < 1; x++)
                      td
                        a.portfolio-link(href='flor'+id[y], data-toggle='modal').button.btn.btn-primary(type='submit') Mostrar
              
                                                                                                     
