            p Operaciones : #{operaciones}
            p Alergias : #{alergias}
            p Medicamentos habituales : #{medicamentos}
            p Declaración de aceptación MMJ : #{declaracion}         
          .col-lg-4
            h3.section-heading Observaciones
            p Enviado por : #{sender}
            p Dosis recomendada : #{dosis}
