        .row
          .col-lg-12
            h2.section-heading.text-center Ficha de socio
          .col-lg-4
            h3.section-heading Antecedentes Generales
            p Nombre : #{name}
            p Rut : #{rut}
            p Edad : #{age}
            p Telefono : #{phone}
            p Correo : #{email}
            p Dirección : #{address}
            p Región : #{region}
