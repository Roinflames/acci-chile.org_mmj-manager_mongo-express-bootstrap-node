extends layout-loggedin

block content
    // Team Section
    section#testimonies.bg-light-gray
      .container.text-center
        .row
          .col-lg-12        
              h1 Agendamiento de horas
              a.h4(href='https://reservahora.setmore.com/resourcebookingpage/rd372442c0a868201e64facecbe1f31a19f94755a', target='_blank') Realizar un agendamiento temporal >>
              h2.onway En construcción                          
              br
              br
        .row
          .col-lg-2
            strong Martes
            - for (var y = 0; y < Object.keys(horas).length; y++)                                          
              p= horas[y].hora
          .col-lg-2
            strong Jueves
            - for (var y = 0; y < Object.keys(horas).length; y++)                                          
              p= horas[y].hora
          .col-lg-4
              strong Membresias
              - for (var y = 0; y < Object.keys(membresias).length; y++)                                          
                p= membresias[y].nombre
          .col-lg-4
            p El agendamiento debe contener: 
            strong 1 al 31
            br
            strong Mes
            br
            strong Año
            br
            strong Hora
            br
            strong Membresía
            br
            .z-depth-1.grey.lighten-4.row(style='display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;')
              form(class='form-signin', action='/signup', method='post')                
              button(class='btn btn-lg btn-primary btn-block', type='submit') Reserva tu hora
              p
                a(href='/', class='text-center') Volver
                span.clearfix
